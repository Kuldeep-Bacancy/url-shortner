<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">URL Shortner</h2>

    <%= form_with model: Link.new do |form| %>
      <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">URL</label>
      <%= form.text_field :url, class: 'g-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500', placeholder: 'http://test.com', autofocus: true %>
      <%= form.submit "Save", class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 mt-2'%>
    <% end %>


    <%= turbo_frame_tag "links", class: 'mt-5' do %>
      <% if @links.exists? %>
        <% @links.each do |link| %>
          <%= render "link", link: link %>
        <% end %>
      <% else %>
        <span class="text-white">No Links found!</span>
      <% end %>
    <% end %>
    <%== pagy_nav(@pagy) %>
</section>